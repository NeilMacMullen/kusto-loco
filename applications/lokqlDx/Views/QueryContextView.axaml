<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:LokqlDx.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LokqlDx.Views.QueryContextView"
             x:DataType="viewModels:QueryContextViewModel"
             Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
    <DockPanel IsVisible="{Binding IsExpanded}" Margin="10">
        <Label DockPanel.Dock="Left">Prefix text</Label>
        <TextBox x:Name="ParametersTextBox" Text="{Binding Text}" AcceptsReturn="True" FontSize="16" />
    </DockPanel>

</UserControl>
